@model IEnumerable<AppWeb.Models.RastreamentoViewModel>
@{
    ViewData["Title"] = "Rastrear pedidos";
}

<!doctype html>
<html lang="pt-br">

<head>
    
    <title>Rapidex | Cargas Expressas</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="sortcut icon" href="images/favicon.ico" type="image/x-icon" />
    <link href="https://fonts.googleapis.com/css?family=Rubik:300,400,700|Oswald:400,700" rel="stylesheet">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/css/aos.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" media="screen" href="~/css/vendor.min.css">
    <link rel="stylesheet" media="screen" id="main-styles" href="~/css/theme.min.css">

</head>

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="0">

    <!--Spinner de carregamento inicial das página-->
    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div class="site-wrap" id="home-section">
        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>
    </div>   
    <!--Fim do spinner de carregamento inicial das página-->


    <!--Cabeçalho-->
    <header class="site-navbar js-sticky-header site-navbar-target" role="banner">
        <div class="container">
            <div class="row align-items-center position-relative">
                <div class="site-logo">
                    <a asp-controller="Home" asp-action="Index" title="Rapidex: Fretes Rapidos, Fretes Locais e Fretes Aereos.">
                        <img src="~/images/logo%20th%20(2).png" alt="Rapidex: Fretes Rapidos, Locais e Aereos.">
                    </a>
                </div>
                <div class="col-12">
                    <nav class="site-navigation text-right ml-auto " role="navigation">
                        <ul class="site-menu main-menu js-clone-nav ml-auto d-none d-lg-block">      
                            <nav class="cd-main-nav js-main-nav">
			                          <ul class="cd-main-nav__list js-signin-modal-trigger">
				                            <li><a class="cd-main-nav__item cd-main-nav__item--signup" asp-controller="Home" asp-action="Index">Voltar</a></li>
			                          </ul>
		                        </nav>
                        </ul>
                    </nav>
                </div>
                <div class="toggle-button d-inline-block d-lg-none">
                    <a href="#" class="site-menu-toggle py-5 js-menu-toggle text-black"><span class="icon-menu h3"></span></a>
                </div>
            </div>
        </div>
    </header>
    <!--Fim do cabeçalho-->

    <!--*****Conteúdo da página*****-->
    <div class="ftco-blocks-cover-1">
        <div class="bg-dark py-4">
            <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
                <div class="order-lg-1 pr-lg-4 text-center text-lg-left">
                    <h1 class="h3 text-light mb-0">Ordem de rastreamento: 
                        <span class="h4 font-weight-normal text-light"></span>
                        @foreach (var item in Model)
                        {
                        @item.IdPedido
                        }
                    </h1>
                </div>
            </div>
        </div>
        <div class="container py-5 mb-2 mb-md-3">
            <div class="row mb-4">
                <div class="col-sm-4 mb-2">
                    <div class="bg-secondary p-4 text-center rounded-lg">
                        <span class="font-weight-medium text-dark mr-2">Tipo de Frete:</span>
                        @foreach (var item in Model)
                        {
                        @item.FretePedido
                        }
                    </div>
                </div>
                <div class="col-sm-4 mb-2">
                    <div class="bg-secondary p-4 text-center rounded-lg">
                        <span class="font-weight-medium text-dark mr-2">Status:</span>
                        @foreach (var item in Model)
                        {
                        @item.StatusPedido
                        }
                    </div>
                </div>
                <div class="col-sm-4 mb-2">
                    <div class="bg-secondary p-4 text-center rounded-lg">
                        <span class="font-weight-medium text-dark mr-2">Entrega:</span>
                        @foreach (var item in Model)
                        {
                        @item.DataEntregaPedido
                        }
                    </div>
                </div>
            </div>
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Valor</th>
                        <th scope="col">Destinatário</th>
                        <th scope="col">Cep Origem</th>
                        <th scope="col">Endereço de Origem</th>
                        <th scope="col">Cep Destino</th>
                        <th scope="col">Endereço de Entrega</th>
                        <th scope="col">Número</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                       <tr>
                           <td>@item.IdPedido</td>
                           <td>@item.ValorPedido</td>
                           <td>@item.DestinatarioPedido</td>
                           <td>@item.CepOrgPedido</td>
                           <td>@item.LogrOrgPedido</td>
                           <td>@item.CepDestPedido</td>
                           <td>@item.LogrDestPedido</td>
                           <td>@item.NumDestPedido</td>

                       </tr>
                    }
                </tbody>
            </table>

            <div class="d-sm-flex flex-wrap justify-content-between align-items-center text-center pt-4">
                <a type="button" class="btn btn-primary btn-md text-white" asp-controller="Home" asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
    <!--*****Fim do conteúdo da página*****-->

    <!--Javascript-->
    <script src="~/login-signup-modal-master/js/placeholders.min.js"></script> 
    <script src="~/login-signup-modal-master/js/main-modal.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="~/js/vendor.min.js"></script>
    <script src="~/js/theme.min.js"></script>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.animateNumber.min.js"></script>
    <script src="~/js/jquery.fancybox.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/main.js"></script>
    <!--Fim do javascript-->
   
</body>

</html>

