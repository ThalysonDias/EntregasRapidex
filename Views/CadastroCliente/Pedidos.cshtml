@model IEnumerable<AppWeb.Models.CadastroClienteViewModel>
@{
    ViewData["Title"] = "Meus Pedidos";
}

<!doctype html>
<html lang="pt-br">

<head>
    
    <title>Rapidex | Cargas Expressas</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="sortcut icon" href="images/favicon.ico" type="image/x-icon" />
    <link href="https://fonts.googleapis.com/css?family=Rubik:300,400,700|Oswald:400,700" rel="stylesheet">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/css/aos.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" media="screen" href="~/css/vendor.min.css">
    <link rel="stylesheet" media="screen" id="main-styles" href="~/css/theme.min.css">

</head>

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">

    <!--Spinner de carregamento inicial das página-->
    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div class="site-wrap" id="home-section">
        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>
    </div>   
    <!--Fim do spinner de carregamento inicial das página-->

    <!--Cabeçalho-->
    <header class="site-navbar js-sticky-header site-navbar-target" role="banner">
        <div class="container">
            <div class="row align-items-center position-relative">
                <div class="site-logo">
                    <a href="index.html" title="Rapidex: Fretes Rapidos, Fretes Locais e Fretes Aereos.">
                        <img src="~/images/logo%20th%20(2).png" alt="Rapidex: Fretes Rapidos, Locais e Aereos.">
                    </a>
                </div>
                <div class="col-12">
                    <nav class="site-navigation text-right ml-auto " role="navigation">
                        <ul class="site-menu main-menu js-clone-nav ml-auto d-none d-lg-block">
                            <li><a href="#services-section" class="nav-link"></a></li>
                            <nav class="cd-main-nav js-main-nav">
			                    <ul class="cd-main-nav__list js-signin-modal-trigger">
				                    <li>
                                        <a class="cd-main-nav__item cd-main-nav__item--signup" asp-controller="Home" asp-action="Index" data-signin="signup">Sair</a>
                                    </li>
			                    </ul>
		                    </nav>
                        </ul>
                    </nav>
                </div>
                <div class="toggle-button d-inline-block d-lg-none">
                    <a href="#" class="site-menu-toggle py-5 js-menu-toggle text-black"><span class="icon-menu h3"></span></a>
                </div>
            </div>
        </div>
    </header>
    <!--Fim do cabeçalho-->

    <!--*****Conteúdo da página*****-->
    <!--Título-->
    <div class="ftco-blocks-cover-1">   
        <div class="page-title-overlap bg-dark pt-4">
            <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
                <div class="order-lg-1 pr-lg-4 text-center text-lg-left">
                    <h1 class="h3 text-light mb-0">Meus Pedidos</h1>
                </div>
            </div>
        </div>
        <!--Fim do título-->
    
        <!--Tabela-->
        <div class="container pb-5 mb-2 mb-md-3">
            <div class="row">
                <section class="col-lg-8">
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Data de Entrega</th>
                                <th scope="col">Valor</th>
                                <th scope="col">Modalidade</th>
                                <th scope="col">Status</th>
                                <th scope="col">Peso</th>
                                <th scope="col">Volume</th>
                                <th scope="col">Tel</th>
                                <th scope="col">Destinatário</th>
                                <th scope="col">Tel. Destinatário</th>
                                <th scope="col">Cep Coleta</th>
                                <th scope="col">Logradouro</th>
                                <th scope="col">Número</th>
                                <th scope="col">Complemento</th>
                                <th scope="col">Bairro</th>
                                <th scope="col">Cidade</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Cep Entrega</th>
                                <th scope="col">Logradouro</th>
                                <th scope="col">Número</th>
                                <th scope="col">Complemento</th>
                                <th scope="col">Bairro</th>
                                <th scope="col">Cidade</th>
                                <th scope="col">Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                               <tr>
                                   <td>@item.IdPedido</td>
                                   <td>@item.DataEntregaPedido</td>
                                   <td>@item.ValorPedido</td>
                                   <td>@item.FretePedido</td>
                                   <td>@item.StatusPedido</td>
                                   <td>@item.PesoPedido</td>
                                   <td>@item.VolumePedido</td>
                                   <td>@item.TelRemPedido</td>
                                   <td>@item.DestinatarioPedido</td>
                                   <td>@item.TelDestinatarioPedido</td>
                                   <td>@item.CepOrgPedido</td>
                                   <td>@item.LogrOrgPedido</td>
                                   <td>@item.NumOrgPedido</td>
                                   <td>@item.CompOrgPedido</td>
                                   <td>@item.BairroOrgPedido</td>
                                   <td>@item.CidadeOrgPedido</td>
                                   <td>@item.UFOrgPedido</td>
                                   <td>@item.CepDestPedido</td>
                                   <td>@item.LogrDestPedido</td>
                                   <td>@item.NumDestPedido</td>
                                   <td>@item.CompDestPedido</td>
                                   <td>@item.BairroDestPedido</td>
                                   <td>@item.CidadeDestPedido</td>
                                   <td>@item.UFDestPedido</td>
                               </tr>
                            }
                        </tbody>
                    </table>
                    <hr class="pb-4">
                    <!--Fim da tabela-->

                    <!--Paginação-->
                    <nav class="d-flex justify-content-between pt-2" aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#"><i class="czi-arrow-left mr-2"></i>Antes</a></li>
                        </ul>
                        <ul class="pagination">
                            <li class="page-item d-sm-none"><span class="page-link page-link-static">1 / 5</span></li>
                            <li class="page-item active d-none d-sm-block" aria-current="page"><span class="page-link">1<span class="sr-only">(current)</span></span></li>
                            <li class="page-item d-none d-sm-block"><a class="page-link" href="#">2</a></li>
                            <li class="page-item d-none d-sm-block"><a class="page-link" href="#">3</a></li>
                            <li class="page-item d-none d-sm-block"><a class="page-link" href="#">4</a></li>
                            <li class="page-item d-none d-sm-block"><a class="page-link" href="#">5</a></li>
                        </ul>
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#" aria-label="Next">Próximo<i class="czi-arrow-right ml-2"></i></a></li>
                        </ul>
                    </nav>
                </section>
            </div>
        </div>
    </div>
    
    <!--Javascript-->
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="~/js/vendor.min.js"></script>
    <script src="~/js/theme.min.js"></script>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.animateNumber.min.js"></script>
    <script src="~/js/jquery.fancybox.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/main.js"></script>
    <!--Fim do Javascript-->
   
</body>

</html>
