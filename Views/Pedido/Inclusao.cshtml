@model IEnumerable<AppWeb.Models.PedidoViewModel>

@{
    ViewData["Title"] = "Finalizar Pedido";
}

<!doctype html>
<html lang="pt-br">

<head>
    
    <title>Rapidex | Cargas Expressas</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="sortcut icon" href="images/favicon.ico" type="image/x-icon" />
    <link href="https://fonts.googleapis.com/css?family=Rubik:300,400,700|Oswald:400,700" rel="stylesheet">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/css/aos.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" media="screen" href="~/css/vendor.min.css">
    <link rel="stylesheet" media="screen" id="main-styles" href="~/css/theme.min.css">

</head>

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">

    <!--Spinner de carregamento inicial das página-->
    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div class="site-wrap" id="home-section">
        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>
    </div>   
    <!--Fim do spinner de carregamento inicial das página-->

    <!--Cabeçalho-->
    <header class="site-navbar js-sticky-header site-navbar-target" role="banner">
        <div class="container">
            <div class="row align-items-center position-relative">
                <div class="site-logo">
                    <a href="index.html" title="Rapidex: Fretes Rapidos, Fretes Locais e Fretes Aereos.">
                        <img src="~/images/logo%20th%20(2).png" alt="Rapidex: Fretes Rapidos, Locais e Aereos.">
                    </a>
                </div>
                <div class="col-12">
                    <nav class="site-navigation text-right ml-auto " role="navigation">
                        <ul class="site-menu main-menu js-clone-nav ml-auto d-none d-lg-block">
                            <li><a href="#services-section" class="nav-link"></a></li>
                            <nav class="cd-main-nav js-main-nav">
			                    <ul class="cd-main-nav__list js-signin-modal-trigger">
				                    <li>
                                        <a class="cd-main-nav__item cd-main-nav__item--signup" asp-controller="Home" asp-action="Index" data-signin="signup">Sair</a>
                                    </li>
			                    </ul>
		                    </nav>
                        </ul>
                    </nav>
                </div>
                <div class="toggle-button d-inline-block d-lg-none">
                    <a href="#" class="site-menu-toggle py-5 js-menu-toggle text-black"><span class="icon-menu h3"></span></a>
                </div>
            </div>
        </div>
    </header>
    <!--Fim do cabeçalho-->

    <!--*****Conteúdo da página*****-->
    <div class="ftco-blocks-cover-1"> 
        <div class="page-title-overlap bg-dark pt-4">
            <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
                <div class="order-lg-1 pr-lg-4 text-center text-lg-left">
                    <h1 class="h3 text-light mb-0">Finalizando Pedido</h1>
                </div>
            </div>
        </div>
        <div class="container pb-5 mb-2 mb-md-3">
            <div class="row">
                <section class="col-lg-8">
                    @foreach (var item in Model)
                    {
                        <form>
                            <h4>Dados de Coleta</h4>
                            <div>
                                <input type="text" class="form-control" name="id" value="@item.IdCliente" hidden>
                            </div>
                            <div>
                                <input type="text" class="form-control" name="cepOrg" value="" required placeholder="Cep de Coleta">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="logOrg" value="" required placeholder="Logradouro">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="numOrg" value="" required placeholder="Número">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="compOrg" value="" placeholder="Complemento">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="bairroOrg" value="" required placeholder="Bairro">
                            </div>   
                            <div>
                                <input type="text" class="form-control" name="cidOrg" value="" required placeholder="Cidade">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="ufOrg" value="" required placeholder="UF">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="peso" value="" required placeholder="Peso">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="vol" value="" required placeholder="Volume">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="tel" value="" required placeholder="Telefone para Contato do Remetente">
                            </div>
                            <h4>Dados de Entrega</h4>
                            <div>
                                <input type="text" class="form-control" name="cepDest" value="" required placeholder="Cep de Entrega">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="logDest" value="" required placeholder="Logradouro">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="numDest" value="" required placeholder="Número">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="compDest" value="" required placeholder="Complemento">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="bairroDest" value="" required placeholder="Bairro">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="cidDest" value="" required placeholder="Cidade">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="ufDest" value="" required placeholder="UF">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="dest" value="" required placeholder="Destinatário">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="telDest" value="" required placeholder="Telefone do Destinatário">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="" value="30/06/2020" disabled>
                            </div>
                            <div>
                                <input type="text" class="form-control" name="" value="Pago" hidden>
                            </div>
                            <div>
                                <input type="text" class="form-control" name="" value="R$ 50,25" disabled>
                            </div>
                            <h4>Dados de Pagamento</h4>
                            <div>
                                <input type="text" class="form-control" name="bandeira" value="" required placeholder="Bandeira do Cartão">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="numero" value="" required placeholder="Número">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="validade" value="" required placeholder="Validade">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="bin" value="" required placeholder="Código de Segurança">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="nome" value="" required placeholder="Nome no Cartão">
                            </div>
                            <div>
                                <input type="text" class="form-control" name="cpf" value="" required placeholder="CPF do Cartão">
                            </div>
                            <div>
                                <input class="btn btn-primary text-white px-4" input type="submit" value="Finalizar Pedido" asp-controller="Pedido" asp-action="Finalizacao">
                            </div>
                        </form> 
                    }
                </section>
            </div>
        </div>
    </div>
    <!--*****Fim do conteúdo da página*****-->

    <!-- Javascript-->
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="~/js/vendor.min.js"></script>
    <script src="~/js/theme.min.js"></script>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.animateNumber.min.js"></script>
    <script src="~/js/jquery.fancybox.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/main.js"></script>
    <!-- Fim do Javascript-->
    
</body>

</html>